#!/bin/sh

build_dir=$(cd $1 && pwd)
cache_dir=$(cd $2 && pwd)
env_dir=$(cd $3 && pwd)

cd build_dir
echo "Fetching latest Erlang..."
wget -o "${cache_dir}/erlang.tar.gz" https://erlang.org/download/otp_src_23.1.tar.gz || exit 1 
printf "Downloaded Erlang. Size: %d\n" $(wc -c < $cache_dir/erlang.tar.gz)